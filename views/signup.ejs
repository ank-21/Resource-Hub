<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Signup/Login</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700|Raleway:300,600" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/signup.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
<style>
.social-container1 {
  text-align: center;
}
.sociallinkbtn {
  display: inline-block;
  width: 60px;
  height: 60px;
  background: #f1f1f1;
  margin: 10px;
  border-radius: 30%;
  box-shadow: 0 5px 15px -5px #00000070;
  color: #562fc7;
  overflow: hidden;
  position: relative;
}
.sociallinkbtn i {
  line-height: 60px;
  font-size: 26px;
  transition: 0.2s linear;
}
.sociallinkbtn:hover i {
  transform: scale(1.3);
  color: #f1f1f1;
}
.sociallinkbtn::before {
  content: "";
  position: absolute;
  width: 120%;
  height: 120%;
  background: #562fc7;
  transform: rotate(45deg);
  left: -110%;
  top: 90%;
}
.sociallinkbtn:hover::before{
  animation: aaa 0.7s 1;
  top: -10%;
  left: -10
@keyframes aaa {
  0% {
    left: -110%;
    top: 90%;
  }
  50% {
    left: 10%;
    top: -30%;
  }
  100% {
    top: -10%;
    left: -10%;
  }
}
.logo{
  font-size:2.7rem;
}
.nav-links{font-size:1.6rem;}
</style>
</head>
<body>
<nav class="navbar">
    <label class="navbar-toggle" id="js-navbar-toggle" for="chkToggle">
            
            <i class="fas fa-bars"></i>
        </label>
    <a href="/" class="logo">Resource Hub</a>
    <input type="checkbox" id="chkToggle"></input>
    <ul class="main-nav" id="js-menu">
      <li>
        <a href="/?user=false" class="nav-links">Home</a>
      </li>
      <li>
        <a href="/?user=false#about" class="nav-links">About</a>
      </li>
      <li>
        <a href="/users/branch" class="nav-links">Notes</a>
      </li>
      <li>
        <a href="/?user=false#contact" class="nav-links">Contact Us</a>
      </li>
    </ul>
  </nav>
<div class="container">
   <section id="formHolder">

      <div class="row">

        

         <!-- Brand Box -->
         <div class="col-sm-6 brand cover">
         	<video src="/img/particle.mp4" muted="" autoplay="" loop></video>
          <h3 class="tag"><span>R</span>esource <span>H</span>ub <span>N</span>ITS</h3>
         </div>

         
         <!-- Form Box -->
         <div class="col-sm-6 form">

            <!-- Login Form -->

            <div class="login form-peice switched">
               <form class="login-form" action="/users/login" method="post" style="top:43%;">
                   <h3 id="logh3" class="heading">Log In</h3>
                   <p id="logusing" class="heading">using</p>
               	 <div class="social-container1">
                	<a class="sociallinkbtn" ><i class="fab fa-facebook-f"></i></a>
                	<a class="sociallinkbtn" ><i class="fab fa-google-plus-g"></i></a>
                	<a class="sociallinkbtn" ><i class="fab fa-linkedin"></i></a>
                </div>
                <div class="email-handle"><span style="background:#fff; 
                padding:0 10px;">or use your Email</span></div>
                  <div class="form-group">
                     <label for="loginemail">Email Address</label>
                     <input type="email" name="email" id="loginemail">
                  </div>

                  <div class="form-group">
                     <label for="loginPassword">Password
                      <div id="eye1" onclick="passwordfnlog()">
                        <i id="hide1" class="fa fa-eye"></i>
                        <i id="hide2" class="fa fa-eye-slash"></i>
                      </div>
                     </label>
                     <input type="password" name="password" id="loginPassword">
                     
                  </div>

                  <div class="CTA">
                     <input type="submit" value="Log In">
                     <br>
                    <p style="margin-top: 14px;color: #524f4f;">Don't have an account?</p>
                     <a href="#" class="switch" style="font-size: 13px;"><b>Sign Up</b></a>
                     
                  </div>
               </form>
            </div><!-- End Login Form -->
            

            <!-- Signup Form -->
            <div class="signup form-peice">
                <div class="error-scroll" id="error">
                    <%- include('./partials/messages') %>
                </div>
                
               <form class="signup-form" action="/users/signup" method="post" style="position:absolute;margin-top: 12px;">
                   <h3 id="signh3" class="heading">Create Account</h3>
                   <p id="signusing" class="heading">using</p>
               	<div class="social-container1">
                	<a class="sociallinkbtn" ><i class="fab fa-facebook-f"></i></a>
                	<a class="sociallinkbtn" ><i class="fab fa-google-plus-g"></i></a>
                	<a class="sociallinkbtn" ><i class="fab fa-linkedin"></i></a>
                </div>
                <div class="email-handle"><span style="background:#fff;padding:0 10px;">or use your Email</span></div>  
                                
                <div class="form-group">
                     <label for="name">Name</label>
                     <input type="text" name="name" id="name" class="name" value="<%= typeof name != 'undefined' ? name : '' %>" required="true">
                     <span class="error"></span>
                </div>

                  <div class="form-group">
                     <label for="email">Email Address</label>
                     <input type="email" name="email" id="email" class="email" value="<%= typeof email != 'undefined' ? email : '' %>" required="true">
                     <span class="error"></span>
                  </div>

                  <div class="form-group">
                     <label for="password">Password
                      <div id="eye" onclick="passwordfnsign()">
                        <i id="hide3" class="fa fa-eye"></i>
                        <i id="hide4" class="fa fa-eye-slash"></i>
                      </div>
                     </label>
                     <input type="password" name="password" id="password" class="pass" value="<%= typeof password != 'undefined' ? password : '' %>" required="true">
                     <span class="error"></span>
                  </div>

                  <div class="form-group">
                     <label for="passwordCon">Confirm Password</label>
                     <input type="password" name="password2" id="passwordCon" class="passConfirm" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required="true">
                     <span class="error"></span>
                  </div>
                  
                  <div class="CTA">
                    <input type="submit" id="sub" value="Sign Up">
                    <br>
                    <p style="margin-top: 14px;color:#524f4f">Already have an account?</p>
                     <a href="#" class="switch"style="font-size: 13px;"><b>Login</b></a>
                  </div>
               </form>
            </div><!-- End Signup Form -->
         </div>
      </div>

   </section>


</div>
